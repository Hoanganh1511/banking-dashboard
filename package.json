{
  "name": "banking-dashboard",
  "version": "1.0.0",
  "description": "Modern banking dashboard with React and Microservices architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=apps/web-client",
    "dev:backend": "npm run dev --workspace=apps/bff-service",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=apps/web-client",
    "build:backend": "npm run build --workspace=apps/bff-service",
    "test": "npm run test --workspaces --if-present",
    "test:frontend": "npm run test --workspace=apps/web-client",
    "test:backend": "npm run test --workspace=apps/bff-service",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:dist": "rm -rf apps/*/dist packages/*/dist apps/*/build",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "db:migrate": "npm run migrate --workspace=apps/bff-service",
    "db:seed": "npm run seed --workspace=apps/bff-service",
    "db:studio": "npm run studio --workspace=apps/bff-service",
    "prepare": "husky install"
  },
  "keywords": [
    "banking",
    "dashboard",
    "react",
    "typescript",
    "microservices",
    "nodejs",
    "aws"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
